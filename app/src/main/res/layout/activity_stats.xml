<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.bopit.bopit.StatsActivity">

    <TextView
        android:id="@+id/textview_stats_flavor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You're better than"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_stats_pct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@+id/textview_stats_flavor1"
        android:text="56%"
        android:textColor="@color/colorBlueText"/>

    <TextView
        android:id="@+id/textview_stats_flavor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/textview_stats_pct"
        android:layout_marginBottom="20dp"
        android:text="Of the players!"
        android:textColor="@color/colorWhiteText"/>

    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@+id/button_gamerestart"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_settings"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_below="@+id/textview_stats_flavor2"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:id="@+id/button_gamerestart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_restart"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_below="@+id/textview_stats_flavor2"
        android:layout_marginBottom="50dp"/>

    <ImageButton
        android:id="@+id/button_stats"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/button_gamerestart"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_stats"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_below="@+id/textview_stats_flavor2"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/textview_previous_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/button_gamerestart"
        android:text="Game Stats"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorBlueText"/>

    <TextView
        android:id="@+id/textview_previous_avg_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/textview_previous_title"
        android:text="Average Reaction Time (seconds)"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_previous_avg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_below="@+id/textview_previous_title"
        android:text="0.8799"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_previous_best_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/textview_previous_avg_subtitle"
        android:text="Best Reaction Time (seconds)"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_previous_best_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_below="@+id/textview_previous_avg_subtitle"
        android:text="0.5805"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_pb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/textview_previous_best_subtitle"
        android:text="Personal Best"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorBlueText"/>

    <TextView
        android:id="@+id/textview_pb_avg_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/textview_pb_title"
        android:text="Average Reaction Time (seconds)"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_pb_avg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_below="@+id/textview_pb_title"
        android:text="0.6499"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_pb_best_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@+id/textview_pb_avg_subtitle"
        android:text="Best Reaction Time (seconds)"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorWhiteText"/>

    <TextView
        android:id="@+id/textview_pb_best_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_below="@+id/textview_pb_avg_subtitle"
        android:text="0.4707"
        android:textColor="@color/colorWhiteText"/>

    <Button
        android:id="@+id/button_resetstats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_button_resetstats"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
